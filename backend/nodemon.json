{
    "restartable": "rs",
    "ignore": [
        ".git",
        "src/**/*.spec.ts",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "watch": [
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "exec": "node -r tsconfig-paths/register -r ts-node/register/transpile-only"
}